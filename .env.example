POSTGRES_PASSWORD=your_secure_password


KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_RAW_OFFERS=francetravail_offres_raw
KAFKA_TOPIC_DLQ=francetravail_offres_dlq
