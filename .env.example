# --- Environnement ---
APP_ENV=local             
ENV_FILE=.env.local       

# --- API France Travail ---
FRANCE_TRAVAIL_CLIENT_ID=your_client_id
FRANCE_TRAVAIL_CLIENT_SECRET=your_client_secret

# --- Base de donn√©es ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=francetravail_jobs
